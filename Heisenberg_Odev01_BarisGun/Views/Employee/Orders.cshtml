@model List<Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.EmployeeName adlı çalışanın ilgilendiği siparişler</h1>
<hr />
<br />
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Sipariş No</th>
            <th>Sipariş Tarihi</th>
            <th>Gönderildiği Ülke</th>
            <th>İlgilenen Çalışan</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.OrderDate</td>
                <td>@item.ShipCountry</td>
                <td>@ViewBag.EmployeeName</td>
            </tr>
        }
    </table>
}
else
{
    <span>Gösterilecek sipariş bulunamadı.</span>
}

